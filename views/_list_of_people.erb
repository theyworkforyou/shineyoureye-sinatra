<ul class="media-list media-list--people">
  <% people.each do |person| %>
    <li class="media">
        <div class="media-left">
            <a href="<%= person.url %>">
              <% if person.thumbnail_image_url %>
                <img class="media-object" src="<%= person.thumbnail_image_url %>" srcset="<%= person.thumbnail_image_url %>" alt="<%= person.name %>">
              <% else %>
                <img class="media-object" src="/images/person-250x250.png" srcset="/images/person-250x250.png" alt="<%= person.name %>">
              <% end %>
            </a>
        </div>
        <div class="media-body">
            <a href="<%= person.url %>"><h3 class="media-heading"><%= person.name %></h3></a>
            <% if person.area %>
            <p>
              <%= person.area.type_name %> :
              <a class="listing__area" href="<%= person.area.url %>"><%= person.area.name %></a>
            </p>
            <% end %>
            <p>
              Party:
              <span class="listing__party"><%= person.party_name %></span>
            </p>
        </div>
    </li>
  <% end %>
</ul>
