<div class="row">
    <div class="col-sm-4 col-md-3">
      <% if @page.person.medium_image_url %>
        <img class="person__image" src="<%= @page.person.medium_image_url %>" alt="<%= @page.person.name %>">
      <% else %>
        <img class="person__image" src="/images/person-250x250.png" alt="<%= @page.person.name %>">
      <% end %>
      <%= erb :_social %>
    </div>

    <div class="col-sm-8 col-md-9">
        <header class="person__key-info">

            <h2><%= @page.position %></h2>
            <h1 class="person__name"><%= @page.person.name %></h1>

          <% if @page.person.constituency %>
            <h2>Constituency</h2>
            <p class="person__constituency"><%= @page.person.constituency %></p>
          <% end %>

          <% if @page.person.position %>
            <h2>Leadership Position</h2>
            <p class="person__position"><%= @page.person.position %></p>
          <% end %>          

          <% if @page.person.area %>
            <h2><%= @page.person.area.type_name %></h2>
            <p class="person__area"><a href="<%= @page.person.area.url %>"><%= @page.person.area.name %></a></p>
          <% end %>
          
          <% if @page.person.party_name %>
            <h2>Party</h2>
            <p class="person__party"><%= @page.person.party_name %></p>
          <% end %>         

          <% if @page.person.birth_date %>
            <h2>Birth date</h2>
            <p class="person__birthdate"><%= @page.person.birth_date %></p>
          <% end %>

          <% if @page.person.phone %>
            <h2>Phone</h2>
            <p class="person__phone"><%= @page.person.phone %></p>
          <% end %>

          <% if @page.person.twitter %>
            <h2>Twitter</h2>
            <p class="person__twitter"><a href="<%= @page.person.twitter_url %>" target="_blank"><%= @page.person.twitter_display %></a></p>
          <% end %>

          <% if @page.person.facebook %>
            <h2>Facebook</h2>
            <p class="person__facebook"><a href="<%= @page.person.facebook_url %>" target="_blank"><%= @page.person.facebook_display %></a></p>
          <% end %>

          <% if @page.person.email %>
            <h2>Email</h2>
            <p class="person__email"><%= @page.person.email %></p>
          <% end %>

          <% if @page.person.home_address %>
            <h2>Address</h2>
            <p class="person__home_address"><%= @page.person.home_address %></p>
          <% end %>

          <% if @page.person.wikipedia_url %>
            <h2>Wikipedia</h2>
            <p class="person__wikipedia"><a href="<%= @page.person.wikipedia_url %>"><%= @page.person.wikipedia_url %></a></p>
          <% end %>

        </header>

        <section class="person__section">
            <h2>Summary
                <!-- <a class="person-edit-link" href="http://prose.io/#theyworkforyou/shineyoureye-prose/edit/gh-pages/summaries/<%= @page.person.id %>.md">Edit</a> -->
            </h2>
            <div class="person-summary">
              <%= @page.summary %>
            </div>
            <div>
                <a class="person-edit-link" href="http://prose.io/#theyworkforyou/shineyoureye-prose/edit/gh-pages/summaries/<%= @page.person.id %>.md">Edit summary</a> |
                <a class="person-edit-link" href="https://docs.google.com/spreadsheets/d/1YLQUsiXDcFZ4eT1PhpEQyO31-2A3lam6JTsXPACUinU/edit#gid=0">Edit person data</a>
            </div>
        </section>

        <section class="person__section">
          <%= erb :_comments %>
        </section>
    </div>
</div>
